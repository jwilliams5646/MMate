<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:showDividers="middle"
        android:divider="@drawable/vertical_separator">


        <com.jwilliams.machinistmate.app.ExtendedClasses.RobotoTextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:id="@+id/codes_code"
            android:layout_gravity="center_vertical|start"
            android:gravity="center_vertical"
            style="@style/HeaderStyle"/>

        <com.jwilliams.machinistmate.app.ExtendedClasses.RobotoTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            style="@style/HeaderStyle"
            android:text="afdbsdbgnsdgnsgnsgnsbsfgn"
            android:layout_gravity="center_vertical|start"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:id="@+id/codes_desc" />

        <com.jwilliams.machinistmate.app.ExtendedClasses.RobotoTextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Milling (M)"
            android:textSize="12sp"
            android:layout_gravity="center"
            style="@style/HeaderStyle"
            android:id="@+id/codes_mill"/>

        <com.jwilliams.machinistmate.app.ExtendedClasses.RobotoTextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Turning (T)"
            android:textSize="12sp"
            style="@style/HeaderStyle"
            android:layout_gravity="center"
            android:id="@+id/codes_turn"/>
    </LinearLayout>
</LinearLayout>