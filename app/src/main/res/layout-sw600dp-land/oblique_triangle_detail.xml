<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/oblique_image"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/oblique_view1_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.jwilliams.machinistmate.app.ExtendedClasses.RobotoTextView
            android:id="@+id/oblique_a_view"
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a" />

        <EditText
            android:id="@+id/oblique_a_input"
            style="@style/EditTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal" />

        <com.jwilliams.machinistmate.app.ExtendedClasses.RobotoTextView
            android:id="@+id/oblique_x_view"
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x" />

        <EditText
            android:id="@+id/oblique_x_input"
            style="@style/EditTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal" />

        <Spinner
            android:id="@+id/oblique_x_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/oblique_view2_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.jwilliams.machinistmate.app.ExtendedClasses.RobotoTextView
            android:id="@+id/oblique_b_view"
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="b" />

        <EditText
            android:id="@+id/oblique_b_input"
            style="@style/EditTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal" />

        <com.jwilliams.machinistmate.app.ExtendedClasses.RobotoTextView
            android:id="@+id/oblique_y_view"
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="y" />

        <EditText
            android:id="@+id/oblique_y_input"
            style="@style/EditTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal" />

        <Spinner
            android:id="@+id/oblique_y_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/oblique_view3_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/oblique_image"
        android:layout_below="@+id/oblique_view2_layout"
        android:orientation="horizontal">

        <com.jwilliams.machinistmate.app.ExtendedClasses.RobotoTextView
            android:id="@+id/oblique_c_view"
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="c" />

        <EditText
            android:id="@+id/oblique_c_input"
            style="@style/EditTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal" />

        <com.jwilliams.machinistmate.app.ExtendedClasses.RobotoTextView
            android:id="@+id/oblique_z_view"
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="z" />

        <EditText
            android:id="@+id/oblique_z_input"
            style="@style/EditTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal" />

        <Spinner
            android:id="@+id/oblique_z_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/oblique_view4_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.jwilliams.machinistmate.app.ExtendedClasses.RobotoTextView
            android:id="@+id/oblique_area_view"
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area" />

        <com.jwilliams.machinistmate.app.ExtendedClasses.RobotoTextView
            android:id="@+id/oblique_area_answer"
            style="@style/TextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.jwilliams.machinistmate.app.ExtendedClasses.RobotoTextView
            android:id="@+id/oblique_height_view"
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height" />

        <com.jwilliams.machinistmate.app.ExtendedClasses.RobotoTextView
            android:id="@+id/oblique_height_answer"
            style="@style/TextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/oblique_view5_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.jwilliams.machinistmate.app.ExtendedClasses.RobotoTextView
            android:id="@+id/oblique_perimeter_view"
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perimeter" />

        <com.jwilliams.machinistmate.app.ExtendedClasses.RobotoTextView
            android:id="@+id/oblique_perimeter_answer"
            style="@style/TextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/oblique_view6_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:divider="@drawable/vertical_separator">


        <com.jwilliams.machinistmate.app.ExtendedClasses.RobotoButton
        android:id="@+id/ot_question_button"
        style="@style/buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
            android:text="\?"
            android:layout_weight="1" />

        <com.jwilliams.machinistmate.app.ExtendedClasses.RobotoButton
            android:id="@+id/oblique_calc_button"
            style="@style/buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/calculate"
            android:layout_weight="3" />

        <com.jwilliams.machinistmate.app.ExtendedClasses.RobotoButton
            android:id="@+id/oblique_clear_button"
            style="@style/buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:layout_weight="2" />

    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/oblique_adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/oblique_calc_button"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-6986976933268044/5924552212"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp" />
</LinearLayout>

</LinearLayout>